{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/bluesky-data-pack-v4.schema.json",
  "title": "BlueSky Data Pack v4 FULL",
  "type": "object",
  "description": "Root object keyed by continent names -> country names -> city names -> City object.",
  "additionalProperties": {
    "type": "object",
    "description": "Countries map for the continent",
    "additionalProperties": {
      "type": "object",
      "description": "Cities map for the country",
      "additionalProperties": {
        "$ref": "#/$defs/City"
      }
    }
  },
  "properties": {
    "Asia": {
      "type": "object"
    },
    "Europe": {
      "type": "object"
    },
    "Middle East & Africa": {
      "type": "object"
    },
    "North America": {
      "type": "object"
    },
    "Central America": {
      "type": "object"
    },
    "South America": {
      "type": "object"
    },
    "Oceania": {
      "type": "object"
    }
  },
  "$defs": {
    "City": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "ko": {
          "type": "string"
        },
        "basePopularity": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "themeWeights": {
          "type": "object",
          "additionalProperties": {
            "type": "number"
          }
        },
        "costIndex": {
          "type": "object",
          "required": [
            "hotel",
            "food",
            "transport"
          ],
          "properties": {
            "hotel": {
              "type": "number"
            },
            "food": {
              "type": "number"
            },
            "transport": {
              "type": "number"
            }
          }
        },
        "tier": {
          "type": "string",
          "enum": [
            "low",
            "mid",
            "high",
            "lux"
          ]
        },
        "bestMonths": {
          "type": "array",
          "items": {
            "type": "integer",
            "minimum": 1,
            "maximum": 12
          }
        },
        "avoidMonths": {
          "type": "array",
          "items": {
            "type": "integer",
            "minimum": 1,
            "maximum": 12
          }
        },
        "seasons": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "spring",
              "summer",
              "fall",
              "winter"
            ]
          }
        },
        "monthMultipliers": {
          "type": "object",
          "additionalProperties": {
            "type": "number"
          }
        },
        "durationHint": {
          "type": "object",
          "required": [
            "minNights",
            "maxNights"
          ],
          "properties": {
            "minNights": {
              "type": "integer",
              "minimum": 1
            },
            "maxNights": {
              "type": "integer",
              "minimum": 1
            }
          }
        },
        "mustSee": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "mustEat": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "highlightPlan": {
          "type": "object",
          "properties": {
            "halfDay": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "oneDay": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "photoSpots": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "seasonTips": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "lodgingZones": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "level": {
                "type": "string"
              },
              "note": {
                "type": "string"
              }
            },
            "required": [
              "name",
              "level"
            ]
          }
        },
        "safetyIndex": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "walkability": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "publicTransit": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "visaNote": {
          "type": "string"
        },
        "electricity": {
          "type": "object",
          "properties": {
            "voltage": {
              "type": "number"
            },
            "plug": {
              "type": "string"
            }
          }
        },
        "languageTips": {
          "type": "string"
        },
        "currency": {
          "type": "object",
          "properties": {
            "code": {
              "type": "string"
            },
            "symbol": {
              "type": "string"
            }
          }
        },
        "priceSamples": {
          "type": "object",
          "properties": {
            "hotelNightUSD": {
              "type": "number"
            },
            "coffeeUSD": {
              "type": "number"
            },
            "mealUSD": {
              "type": "number"
            },
            "transportUSD": {
              "type": "number"
            }
          }
        },
        "keywords": {
          "type": "object",
          "properties": {
            "see": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "eat": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "do": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "geo": {
          "type": "object",
          "properties": {
            "lat": {
              "type": "number"
            },
            "lng": {
              "type": "number"
            }
          },
          "required": [
            "lat",
            "lng"
          ]
        },
        "_continent": {
          "type": "string"
        },
        "_country": {
          "type": "string"
        }
      },
      "required": [
        "tier",
        "costIndex",
        "durationHint",
        "priceSamples"
      ]
    }
  }
}